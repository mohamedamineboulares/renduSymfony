{% extends 'base.html.twig' %}

{% block body %}
    <h1>List Authors</h1>
    <table border="1">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        {% for author in authors %}
            <tr>
                <td>{{ author.username }}</td>
                <td>{{ author.email }}</td>
                <td>
                    <a href="{{ path('edit_author', {id: author.id}) }}">Edit</a> |
                    <a href="{{ path('delete_author', {id: author.id}) }}" 
                       onclick="return confirm('Are you sure you want to delete this author?');">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

